// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider          = "cockroachdb"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOWDB_URL")
}

model AuthUser {
  id           String         @id @unique
  auth_session AuthSession[]
  auth_key     AuthKey[]
  email        String?        @unique
  userId       String?        @unique
  user         User?
  @@map("auth_user")
}

model AuthSession {
  id             String   @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  auth_user      AuthUser @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("auth_session")
}

model AuthKey {
  id              String   @id @unique
  hashed_password String?
  user_id         String
  primary_key     Boolean
  expires         BigInt?
  auth_user       AuthUser @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("auth_key")
}

model User {
  id            String      @id @unique
  auth_user     AuthUser    @relation(fields: [id], references: [id], onDelete: Cascade)
  email         String?     @unique
  name          String? 
  joined        DateTime    @default(now())
  prefersEmoji  Boolean     @default(false)
  emoji         String?
  color         String?
  member_of     GroupMember[]        
}

model Group {
  id            String        @id @unique @default(cuid())
  name          String
  emoji         String
  members       GroupMember[] @relation("members")
  sessions      Session[]
  shiftTypes    ShiftType[]
  updatedAt     DateTime      @updatedAt @default(now())
  timezone      String
}

model GroupMember {
  group_id      String
  group         Group     @relation("members", references: [id], fields: [group_id], onDelete: Cascade)
  user_id       String    
  user          User      @relation(references: [id], fields: [user_id], onDelete: Cascade)
  is_admin      Boolean   @default(false)
  is_respondent Boolean   @default(false)
  nickname      String?
  responses     Response[]
  shifts        ShiftAssignment[]

  @@id([group_id, user_id])
	@@map("GroupMembers")
}

model Session {
  id            String         @id @unique @default(cuid())
  group_id      String
  group         Group          @relation(fields: [group_id], references: [id], onDelete: Cascade)
  start         DateTime       @db.Date
  end           DateTime       @db.Date
  responses     Response[]
  shift_types   ShiftType[]
  shifts        Shift[]
  calendars     DutyCalendar[] @relation("all_calendars")
  final_cal_id  String?        @unique
  final_cal     DutyCalendar?  @relation("final_calendar", fields: [final_cal_id], references: [id])
  dueDate       DateTime?
}

model Response {
  id            String      @id @unique @default(cuid())
  timestamp     DateTime    @default(now())
  session_id    String
  session       Session     @relation(fields: [session_id], references: [id], onDelete: Cascade)
  respondent_id String
  group_id      String
  respondent    GroupMember @relation(fields: [group_id, respondent_id], references: [group_id, user_id], onDelete: Cascade)
  preferences   Preference[]
}

model Preference {
  response_id   String
  response      Response    @relation(fields: [response_id], references: [id])
  shift_id      String
  shift         Shift       @relation(fields: [shift_id], references: [id])
  ranking       Int

  @@id([response_id, shift_id])
}

model ShiftType {
  id            String      @id @unique @default(cuid())
  name          String
  group_id      String
  group         Group       @relation(fields: [group_id], references: [id])
  start_date    DateTime?   @db.Date
  end_date      DateTime?   @db.Date
  repeat        Repeat
  start_time    DateTime    @db.Time
  end_time      DateTime    @db.Time
  shifts        Shift[]
  repeat_days   ShiftTypeRepeat[]
  sessions      Session[]
}

enum Repeat {
  NEVER
  DAILY
  WEEKLY
  MONTHLY
}

model ShiftTypeRepeat {
  type_id       String
  type          ShiftType   @relation(fields: [type_id], references: [id])
  weekday       Int

  @@id([type_id, weekday])
}

model Shift {
  id            String      @id @unique @default(cuid())
  type_id       String
  type          ShiftType   @relation(fields: [type_id], references: [id])
  session_id    String      
  session       Session     @relation(fields: [session_id], references: [id])
  date          DateTime    @db.Date
  preferences   Preference[]
  assigned_to   ShiftAssignment[]
}

model DutyCalendar {
  id            String            @id @unique @default(cuid())
  session_id    String
  session       Session           @relation("all_calendars", fields: [session_id], references: [id])
  final_for     Session?          @relation("final_calendar")
  created       DateTime          @default(now())
  assignments   ShiftAssignment[]
}

model ShiftAssignment {
  cal_id        String
  calendar      DutyCalendar  @relation(fields: [cal_id], references: [id])
  user_id       String
  group_id      String
  member        GroupMember   @relation(fields: [user_id, group_id], references: [user_id, group_id])
  shift_id      String
  shift         Shift         @relation(fields: [shift_id], references: [id])
  assigned      ShiftAssigned @default(AUTOMATICALLY)

  @@id([cal_id, shift_id])
}

enum ShiftAssigned {
  MANUALLY
  AUTOMATICALLY
}